---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag }}/
layout: "layouts/default"
---
<h1 class="title">Articles with <span class="tag is-size-6">{{ tag }}</span> Tag</h1>
<div class="content">
    {% set taglist = collections[ tag ] %}
    <ol>
    {% for post in taglist | reverse %}
      <li><a href="{{ post.url | url }}">{{ post.data.title }}</a></li>
    {% endfor %}
    </ol>
</div>